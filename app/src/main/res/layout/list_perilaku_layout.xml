<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:padding="15dp">

    <ImageView
        android:id="@+id/img_list_perilaku"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/img_des_perilaku" />

    <TextView
        android:id="@+id/tv_list_perilaku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/nunito"
        android:text="@string/nama_perilaku"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_list_perilaku"
        app:layout_constraintStart_toEndOf="@+id/img_list_perilaku"
        app:layout_constraintTop_toTopOf="@+id/img_list_perilaku" />



</androidx.constraintlayout.widget.ConstraintLayout>